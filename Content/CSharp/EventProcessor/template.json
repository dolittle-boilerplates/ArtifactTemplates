{
    "name": "EventProcessor template",
    "type": "eventProcessor",
    "description": "Creates an event processor",
    "language": "csharp",
    "includedFiles": [
        "{{name}}.cs"
    ],
    "dependencies": [
         {
             "type": "discover",
             "name": "eventChoices",
             "discoverType": "multipleFiles",
             "fileMatch": ".*\\.cs$",
             "contentMatch": ".*public\\s*class\\s*(\\w*)\\s*:\\s*IEvent",
             "withNamespace": true,
             "milestone": ".*\\.csproj$",
             "fromFolders": "Events"
         },
         {
            "type": "discover",
            "name": "readModelChoices",
            "discoverType": "multipleFiles",
            "fileMatch": ".*\\.cs$",
            "contentMatch": ".*public\\s*class\\s*(\\w*)\\s*:\\s*IReadModel",
            "withNamespace": true,
            "milestone": ".*\\.csproj$"
        },
         {
             "type": "prompt",
             "promptType": "checkbox",
             "name": "events",
             "message": "Choose an event: ",
             "pageSize": 10,
             "choices": "eventChoices"
         },
         {
            "type": "prompt",
            "promptType": "checkbox",
            "name": "readModels",
            "message": "Choose read models: ",
            "pageSize": 10,
            "choices": "readModelChoices"
        }
     ]
 }
 