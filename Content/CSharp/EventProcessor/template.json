{
    "name": "EventProcessor template",
    "type": "eventProcessor",
    "area": "read",
    "description": "Creates an event processor",
    "language": "csharp",
    "includedFiles": [
        "{{name}}.cs"
    ],
    "dependencies": [
         {
             "description": "The events that should be generated processors for",
             "name": "events",
             "type": "discover",
             "discoverType": "multipleFiles",
             "userInput": "chooseMultiple",
             "message": "Choose events to process", 
             "fileMatch": ".*\\.cs$",
             "contentMatch": ".*public\\s*class\\s*(\\w*)\\s*:\\s*IEvent",
             "withNamespace": true,
             "milestone": ".*\\.csproj$",
             "fromArea": "events"
         },
         {
            "description": "The read models that is manipulated by the events",
            "name": "readModels",
            "type": "discover",
            "discoverType": "multipleFiles",
            "userInput": "chooseMultiple",
            "message": "Choose read models",
            "fileMatch": ".*\\.cs$",
            "contentMatch": ".*public\\s*class\\s*(\\w*)\\s*:\\s*IReadModel",
            "withNamespace": true,
            "milestone": ".*\\.csproj$"
        }
     ]
 }
 