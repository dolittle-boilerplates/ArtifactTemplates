{
   "name": "CommandHandler template",
   "type": "commandHandler",
   "area": "domain",
   "description": "Creates a command handler",
   "language": "csharp",
   "includedFiles": [
       "{{name}}.cs"
   ],
   "dependencies": [
        {
            "description": "The commands to generate command handlers for",
            "name": "commands",
            "type": "discover",
            "discoverType": "multipleFiles",
            "userInput": "chooseMultiple",
            "message": "Choose commands to handle",
            "fileMatch": ".*\\.cs$",
            "contentMatch": ".*public\\s*class\\s*(\\w*)\\s*:\\s*ICommand",
            "withNamespace": true,
            "milestone": ".*\\.csproj$"
        },
        {
            "description": "The aggregate roots (event sources)",
            "name": "aggregateRoots",
            "type": "discover",
            "discoverType": "multipleFiles",
            "userInput": "chooseMultiple",
            "message": "Choose aggregate roots (event sources): ",
            "fileMatch": ".*\\.cs$",
            "contentMatch": ".*public\\s*class\\s*(\\w*)\\s*:\\s*AggregateRoot",
            "withNamespace": true,
            "milestone": ".*\\.csproj$"
        }
    ]
}
