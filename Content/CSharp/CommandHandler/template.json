{
   "name": "CommandHandler template",
   "type": "commandHandler",
   "description": "Creates a command handler",
   "language": "csharp",
   "includedFiles": [
       "{{name}}.cs"
   ],
   "dependencies": [
        {
            "type": "discover",
            "name": "commandChoices",
            "discoverType": "multipleFiles",
            "fileMatch": ".*\\.cs$",
            "contentMatch": ".*public\\s*class\\s*(\\w*)\\s*:\\s*ICommand",
            "withNamespace": true,
            "milestone": ".*\\.csproj$"
        },
        {
            "type": "discover",
            "name": "aggregateRootChoices",
            "discoverType": "multipleFiles",
            "fileMatch": ".*\\.cs$",
            "contentMatch": ".*public\\s*class\\s*(\\w*)\\s*:\\s*AggregateRoot",
            "withNamespace": true,
            "milestone": ".*\\.csproj$"
        },
        {
            "type": "prompt",
            "promptType": "checkbox",
            "name": "commands",
            "message": "Choose commands to handle: ",
            "pageSize": 10,
            "choices": "commandChoices"
        },
        {
           "type": "prompt",
           "promptType": "checkbox",
           "name": "aggregateRoots",
           "message": "Choose aggregate roots (event sources): ",
           "pageSize": 10,
           "choices": "aggregateRootChoices"
       }
    ]
}
